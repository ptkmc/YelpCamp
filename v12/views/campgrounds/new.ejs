<% include ../partials/header %>

<h1 style="text-align: center; margin-bottom: .7em;">Create a New Campground</h1>
<div class="container" style="max-width: 29em;">
    <form action="/campgrounds" method="POST">
        <div class="form-group">
          <input type="text" name="name" class="form-control" placeholder="name">
        </div>
        <div class="form-group">
          <input type="number" name="price" class="form-control" placeholder="price" min="0.01" step="0.01">
        </div>
        <div class="form-group">
          <input type="text" name="image" class="form-control" placeholder="image url">
        </div>
        <div class="form-group">
          <input type="text" name="description" class="form-control" placeholder="description">
        </div>
        <button type="submit" class="btn btn-primary" style="width: 100%;">Submit!</button>
    </form>
    <p></p>
    <a href="/campgrounds">Go Back</a>
</div>

<% include ../partials/footer %>