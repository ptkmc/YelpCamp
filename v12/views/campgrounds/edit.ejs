<% include ../partials/header %>

<h1 style="text-align: center; margin-bottom: .7em;">Edit <%= campground.name %></h1>
<div class="container" style="max-width: 29em;">
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input type="text" name="campground[name]" class="form-control" value="<%= campground.name %>">
        </div>
        <div class="form-group">
          <input type="text" name="campground[image]" class="form-control" value="<%= campground.image %>">
        </div>
        <div class="form-group">
          <input type="text" name="campground[description]" class="form-control" value="<%= campground.description %>">
        </div>
        <button type="submit" class="btn btn-primary" style="width: 100%;">Submit!</button>
    </form>
    <p></p>
    <a href="/campgrounds">Go Back</a>
</div>

<% include ../partials/footer %>